<Window x:Class="MDG.Main.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStartupLocation="CenterScreen"
        Title="Barge Drafter" Height="700" Width="900"
        xmlns:visuals="clr-namespace:MDG.Visuals;assembly=MDG.Visuals" Loaded="Window_Loaded">
    <Grid Background="Black">
        <StackPanel HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
            <visuals:AttitudeIndicator Margin="60" 
                HorizontalAlignment="Center" 
                x:Name="rearAttitude" 
                VerticalAlignment="Center" 
                View="Rear View" KeyboardNavigation.TabIndex="0" KeyboardNavigation.IsTabStop="True" />
                
        </StackPanel>
        
    </Grid>
</Window>
